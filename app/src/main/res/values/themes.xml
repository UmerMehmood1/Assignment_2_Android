<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.ExpenseTracker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/background_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Divider color -->
        <item name="dividerColor">@color/divider</item>

        <!-- StatusBar and NavigationBar colors -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Set true for light text on dark status bar -->
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item> <!-- Set true for light text on dark nav bar -->

        <!-- Default text color for text fields -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <!-- TextInput style for modern look -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

        <!-- Button styles -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <!-- Theme overlay for customizable toolbar colors if needed -->
    <style name="ThemeOverlay.ExpenseTracker.Toolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>
